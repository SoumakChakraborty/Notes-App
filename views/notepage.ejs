<html>
    <head>
        <title>Note page</title>
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="stylesheet" href="/css/style.css">
        <link href="https://fonts.googleapis.com/css?family=Jura&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=News+Cycle&display=swap" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Dancing+Script&display=swap" rel="stylesheet">
    </head>
    <body id="landing">
            <nav id="navbar">
                    <div id="app-name">
                        <a href="#">NoteApp</a>
                    </div>
                <ul id="user">
                    <li><a href="#"><img src="/images/user.png"></a>
                        <ul>
                             <li id="top">
                                <a href="/changepass/<%=user%>">Change Password</a> 
                            </li>
                            <li id="bottom">
                                <a href="/signout">Sign Out</a> 
                            </li>
                        </ul>
                   </li> 
                </ul> 
            </nav> 
           <div id="create-note">
             <a href="#">+ Create new note</a>  
           </div>
           <div id="note-div">
           </div>
           <h1>Your notes</h1> 
           <%for(let i=0;i<notes.length;i++){%>
              <div class="notes-show">
                 <p><strong>Name</strong> - <%=notes[i].note_name%></p>
                 <p><strong>Content</strong> - <%=notes[i].note_text.substring(0,notes[i].note_text.length/2)%>...</p>
                 <p><strong>Created</strong> - <%=notes[i].created%></p>
                 <div class="view">
                    <a href="/view/<%=notes[i].noteID%>">View note</a> 
                 </div>
                 <div class="delete">
                    <a href="#" name="<%=notes[i].noteID%>">Delete note</a> 
                 </div>       
              </div> 
            <%}%>         
          <script src="/scripts/add_note.js"></script>
          <script src="/scripts/delete.js"></script>    
    </body>
</html>